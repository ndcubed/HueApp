<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_card_layer"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.ndcubed.hueapp.FixedAspectHueTapButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/hue_tap_button_one"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:gravity="right"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingRight="60dp">
                <com.ndcubed.hueapp.FixedAspectHueTapButton
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/hue_tap_button_two"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="left"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="60dp">
                <com.ndcubed.hueapp.FixedAspectHueTapButton
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/hue_tap_button_four"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.ndcubed.hueapp.FixedAspectHueTapButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/hue_tap_button_three"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>