<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:ndcubed="http://schemas.android.com/apk/res-auto"
              android:background="#96000000"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp">

    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="@drawable/dialog_background">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:orientation="vertical">

            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="95dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="1dp"
                    android:text="Create"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/dark_blue_arrow"
                    android:textColor="#ffffff"/>

            <com.ndcubed.nappsupport.views.RobotoTextView.TextViewThin
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:gravity="center"
                    android:text="Select all the lights you want included in this group below."
                    android:textSize="25sp"
                    android:textColor="#ff282828"/>

            <ListView android:layout_width="match_parent" android:layout_height="200dp"
                      android:id="@+id/lightList"
                      android:layout_marginTop="20dp"
                      android:layout_marginLeft="10dp"
                      android:layout_marginBottom="20dp"
                      android:layout_marginRight="10dp"/>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:gravity="center">

                <com.ndcubed.nappsupport.views.SimpleColorButton
                        android:id="@+id/createGroupButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        ndcubed:buttonColor="#405269"
                        android:text="Next"
                        android:padding="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        />
                <com.ndcubed.nappsupport.views.SimpleColorButton
                        android:id="@+id/cancelGroupButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        ndcubed:buttonColor="#405269"
                        android:text="Cancel"
                        android:padding="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>