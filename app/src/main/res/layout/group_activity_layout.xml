<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="?attr/appBackgroundColor"
        >

    <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <com.ndcubed.nappsupport.views.DotPageIndicator android:layout_width="match_parent" android:layout_height="10dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="45dp"
            android:id="@+id/dotIndicator"/>

    <View android:layout_width="44dp" android:layout_height="44dp"
          android:id="@+id/arrowNextButton"
          android:layout_marginBottom="28dp"
          android:layout_marginEnd="35dp"
          android:background="@drawable/arrow_next_button"
          android:layout_centerVertical="true"
          android:layout_alignParentEnd="true"/>

    <View android:layout_width="44dp" android:layout_height="44dp"
          android:id="@+id/doneButton"
          android:layout_centerVertical="true"
          android:layout_marginBottom="28dp"
          android:layout_marginEnd="35dp"
          android:background="@drawable/circle_button_done"
          android:visibility="gone"
          android:layout_alignParentEnd="true"/>

</RelativeLayout>

