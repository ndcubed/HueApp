<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/colorBackground"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="?attr/actionBarColor">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="Pick a Color"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:visibility="visible"/>


    <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp"
            android:layout_weight="1">
        <TextView
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:text="Pick"
                android:textSize="18dp"
                android:background="#ffffff"
                android:textColor="?attr/actionBarColor"
                android:gravity="center"
                android:id="@+id/pickButton"
                android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="120dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="The color this group will be when you turn it on. This can be changed anytime in the groups list."
            android:textSize="13dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="visible"/>


</LinearLayout>