<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:ndcubed="http://schemas.android.com/apk/res-auto"
              android:background="#96000000"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp">

    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/half_rounded_card_layer"
                android:paddingBottom="15dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="95dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="1dp"
                    android:text="Color"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/dark_blue_arrow"
                    android:textColor="#ffffff"/>

                <com.ndcubed.nappsupport.views.RobotoTextView.TextViewThin
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"
                    android:text="Choose a Color"
                    android:textSize="25sp"
                    android:textColor="#ff282828"/>

                <com.ndcubed.nappsupport.views.ColorChooser android:layout_width="match_parent" android:layout_height="200dp" android:id="@+id/colorChooser"/>

            </LinearLayout>

            <com.ndcubed.nappsupport.views.SimpleColorButton
                android:id="@+id/doneButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ndcubed:buttonColor="#405269"
                ndcubed:isHalfRoundedStyle="true"
                ndcubed:isAnimated="false"
                android:text="Done"
                android:padding="20dp"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>